@model QLEventKhoa.Models.tbLoaiAdmin


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("addLoaiAD", "QLAdmin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <center><h4>Thêm loại Admin</h4></center>

        <div class="form-group">
            <label>Tên loại Admin</label>
            @Html.EditorFor(model => model.tenLoaiAD, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên loại Admin....", required = "required", @maxlength = "50", @minlength = "7" } })
            @Html.ValidationMessageFor(model => model.tenLoaiAD, "", new { @class = "text-danger" })
        </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-success" onlick="addLoaiAD();">Thêm loại Admin</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        </div>
    }
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>