@model QLEventKhoa.Models.tbAdmin
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Đăng nhập Admin</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
   
    <link href="~/Content/dist/css/AdminLTE.min.css" rel="stylesheet" />

    <link href="~/Content/dist/css/skins/skin-blue.min.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
</head>

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <h2> <b>Đăng nhập Admin</b></h2>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Đăng nhập để bắt đầu</p>         
            <h5 style="color:red;text-align:center">@ViewBag.error</h5>
            @using (Html.BeginForm("LoginAD", "AccountAD", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">             
                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.userAdmin, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đăng nhập tài khoản", @maxlength = "10", required = "required" } })
                        @Html.ValidationMessageFor(model => model.userAdmin, "", new { @class = "text-danger" })
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group has-feedback">
                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.passAdmin, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mật khẩu của tài khoản", required = "required" } })
                        @Html.ValidationMessageFor(model => model.passAdmin, "", new { @class = "text-danger" })
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                
                    <div class="col-md-12" style="padding-top: 30px">
                        <center>
                            <button type="submit" class="btn btn-primary btn-block btn-flat" style="font-weight:bold">Đăng nhập</button>
                        </center>
                    </div><!-- /.col -->
                </div>

            }
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
 
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>   
    <script src="~/Scripts/bootstrap.min.js"></script>  
    <script src="~/Scripts/app.min.js"></script>
</body>
</html>
