@model IEnumerable<QLEventKhoa.Models.tbThamGiaEvent>
@{
    ViewBag.Title = "Danh sách đăng ký";
    Layout = "~/Views/Shared/_LayoutSV.cshtml";
}
<section>
    <div class="db">
        <!--LEFT SECTION THÔNG TIN CÁ NHÂN-->
        @Html.Partial("_PartialPageLeftSV")
        <!--CENTER SECTION-->
        <div class="db-2">
            <div class="db-2-com db-2-main">
                <h4>Danh sách những sinh viên trong lớp tham gia sự kiện</h4>
                <div class="db-2-main-com db-2-main-com-table">
                    @if (Session["LogIn"] == null)
                    {
                        <p>Vui lòng <a href="@Url.Action("LoginSV","AccountSV")">Đăng nhập</a></p>
                    }
                    else
                    {
                        <table class="table table-hover table-danger" id="dslop">
                            <thead class="alert-danger">
                                <tr>
                                    <th>#</th>
                                    <th>Mã Sinh Viên</th>
                                    <th>Tên Sinh Viên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int rowNo = 0;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td colspan="6" class="text-center"> Trống </td>*@
                                        <td>@(rowNo += 1)</td>
                                        <td>@item.maSV</td>
                                        <td>@item.tenSV</td>
                                        <td>@item.emailSV</td>
                                        <td>@item.phoneSV</td>
                                        <td>
                                            @if (item.statusThamGia == true)
                                            {
                                                <p>Đã xác nhận</p>
                                            }
                                            else
                                            {
                                                <p>Chưa xác nhận</p>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="alert-info">
                                <tr>
                                    <th>#</th>
                                    <th>Mã Sinh Viên</th>
                                    <th>Tên Sinh Viên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </tfoot>
                        </table>
                    }
                </div>
            </div>
        </div>
        <!--RIGHT SECTION-->
    </div>
</section>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:royalblue">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <center><h4 class="modal-title" style="font-weight:bold;color:white">Hủy tham gia sự kiện</h4></center>
            </div>
            <div class="modal-body">
            </div>
        </div>
    </div>
</div>

<script>
     $(function () {
        $('#dslop').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": false,

        });
    });
</script>