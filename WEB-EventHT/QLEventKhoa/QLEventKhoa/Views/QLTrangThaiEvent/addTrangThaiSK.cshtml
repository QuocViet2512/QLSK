@model QLEventKhoa.Models.tbTrangThaiEvent
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("addTrangThaiSK", "QLTrangThaiEvent", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <center><h4>Thêm trạng thái sự kiện mới</h4></center>

        <div class="form-group">
            <label>Tên trạng thái sự kiện</label>
            @Html.EditorFor(model => model.tenTrangThaiEvent, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên trạng thái sự kiện....", required = "required", @maxlength = "20", @minlength = "5" } })
            @Html.ValidationMessageFor(model => model.tenTrangThaiEvent, "", new { @class = "text-danger" })
        </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-success" onlick="addTrangThaiSK();">Tạo trạng thái mới</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        </div>
    }
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>