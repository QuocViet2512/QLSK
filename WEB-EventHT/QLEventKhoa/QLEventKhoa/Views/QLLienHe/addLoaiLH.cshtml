@model QLEventKhoa.Models.tbLoaiLH

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("addLoaiLH", "QLLienHe", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <center><h4>Thêm loại liên hệ</h4></center>
        <div class="form-group">
            <label>Tên loại liên hệ</label>
            @Html.EditorFor(model => model.tenLoaiLH, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên loại liên hệ....", required = "required", @maxlength = "50", @minlength = "7" } })
            @Html.ValidationMessageFor(model => model.tenLoaiLH, "", new { @class = "text-danger" })
        </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-success" onlick="addLoaiLH();">Thêm loại liên hệ</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
        </div>
    }
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>